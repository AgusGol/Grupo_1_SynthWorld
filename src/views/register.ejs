<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link href="/css/register.css" rel="stylesheet">
</head>

<body>
    <%- include('./partials/header') %>

<!-- Register form -->

<main>
    <section class="new-user-section">
        <h1 class="join-text">Ready to join our community?</h1>
        <h2>Create your account</h2>
        <form action="/users/register" method="POST" class="register-form" enctype="multipart/form-data">
            <div class="container-inputs">
                <div>
                <label for="email">Email address</label>
                <input 
                type="email" 
                name="email" 
                placeholder="Email address" 
                class="email-input-login" 
                value="<%= locals.oldData ? oldData.email : null %>"
                >
                <% if(locals.errors && errors.email) { %>
                    <div class="errorList">
                        <%= errors.email.msg %> 
                    </div>
                <% } %> 
                </div>
                <label for="password">Password</label>
                <input 
                type="password" 
                name="password" 
                placeholder="Password" 
                >
                <% if(locals.errors && errors.password) { %>
                    <div class="errorList">
                        <%= errors.password.msg %> 
                    </div>
                <% } %>
                
                <label for="password2">Confirm password</label>
                <input 
                type="password" 
                name="password2" 
                placeholder="Confirm password" >
                <% if(locals.errors && errors.password2) { %>
                    <div class="errorList">
                        <%= errors.password2.msg %> 
                    </div>
                <% } %>
            </div>
            
            <h1>Personal information</h1>

            <div class="second-container-inputs">
                <label for="name">First name</label>
                <input 
                type="text" 
                name="name" 
                placeholder="First name"
                value="<%= locals.oldData ? oldData.name:null %>">
                <% if(locals.errors && errors.name) { %>
                    <div class="errorList">
                        <%= errors.name.msg %> 
                    </div>
                <% } %>

                <label for="last_name">Last name</label>
                <input 
                type="text" 
                name="last_name" 
                placeholder="Last name"
                value="<%= locals.oldData ? oldData.last_name:null %>"
                >
                <% if(locals.errors && errors.last_name) { %>
                    <div class="errorList">
                        <%= errors.last_name.msg %> 
                    </div>
                <% } %>
            </div>
            <!--  <div class="userCategory">
            <p>which type of user are you?</p>
                <article class="user-Categories-Container">
                    <label for="category">Categories</label>
                        <Select class="user-Categories" name="category"  required>
                            <option value= 'none' disabled selected>Choose one</option>
                            <option value= 'true' disabled>Administrator</option>
                            <option value= 'false'>Customer</option>
                        </Select>
                </article>
                <label for=""></label>
            </div>-->
            <!-- <div class="age">
            <p>When where you born?</p>
            </div>
            <div class="third-container-inputs">
                <label for="userBirth">BirthDay</label>
                <input type="date" name="userBirth">
            </div> -->
            <article class="image-container">
                <section class="user-image">
                    <label for="userAvatar">Images</label>
                    <p>Image</p>
                    <input 
                    type="file" 
                    name="userAvatar" 
                    class="btn-File-Select" 
                    multiple accept=".jpg, .jpeg, .png, gif"
                    value="<%= locals.olData ? oldData.userAvatar:null %> ">
                </section>
                <% if(locals.errors && errors.userAvatar) { %>
                    <div class="errorList">
                        <%= errors.userAvatar.msg %> 
                    </div>
                <% } %>
            </article>
            <button type="submit" class="btn-register">
                Register
            </button>
            <p class="paragraph">
                Or
            </p>


    <!--FB and Gmail buttons-->
        <div class="container-btn-register-with">
            <button class="btn-register-with-facebook"><i class="fab fa-facebook"></i>
    Register with Facebook</button>
        </div>
        
        <div class="container-btn-register-with">
            <button class="btn-register-with-google"><i class="fab fa-google"></i><span>  Register with Google</span></button>
        </div>

        <p class="create-account">Already have an account?<a class="sing-in" href="/users/login"><strong> Sign in</strong></a></p>
        </form>
</section>
</main>


